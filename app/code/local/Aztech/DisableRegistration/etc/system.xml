<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <aztech_settings translate="label" module="aztech_helper">
            <label>Atech Settings</label>
            <sort_order>500</sort_order>
        </aztech_settings>
    </tabs>
    <sections>
        <aztech_section translate="label" module="aztech_helper">
            <label>Registration Settings</label>
            <tab>aztech_settings</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <registration_page translate="label">
                    <label>Registration Page</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <disable_registration_option>
                            <label>Disable Registration</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Disable user registration in frontend.</comment>
                        </disable_registration_option>
                    </fields>
                </registration_page>
            </groups>
        </aztech_section>
    </sections>
</config>
